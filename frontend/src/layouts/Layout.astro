---
import { VisualEditing } from "@sanity/astro/visual-editing";
import { sanityClient } from "sanity:client";
import Menu from '../components/Menu.astro';
import type { MenuItem } from '../components/Menu.astro';
import Footer from '../components/Footer.astro';
import type { SiteSettings } from '../components/Footer.astro';
import HreflangTags from '../components/HreflangTags.astro';
import SEO from '../components/SEO.astro';
import OrganizationSchema from '../components/structured-data/OrganizationSchema.astro';
import { detectLanguage, type Language } from '../lib/utils/language.js';
import { QueryBuilder } from '../lib/sanity/queryBuilder.js';

// Import CSS files in order
import '../styles/reset.css';
import '../styles/fonts.css'; // Web fonts - must load before tokens
import '../styles/tokens.css';
import '../styles/primitives.css'; // Layout primitives (Center, Stack, Cluster)
import '../styles/base.css';
import '../styles/utilities.css';
import '../styles/scroll-containers.css'; // Scroll container patterns
import '../styles/components.css';
import '../styles/layouts.css';
import '../styles/artist-card.css';

interface SeoData {
  title?: string;
  description?: string;
  indexingStatus?: 'index' | 'noindex';
}

export interface Props {
  title: string;
  description?: string;
  slugNo?: string;
  slugEn?: string;
  frontpage?: boolean;
  /** SEO data from Sanity CMS */
  seo?: SeoData;
  /** Image for Open Graph/Twitter cards (Sanity image object) */
  image?: any;
  /** Page type for OG (website, article, event) */
  ogType?: 'website' | 'article' | 'event';
  /** Published date for articles */
  publishedDate?: string;
  /** Modified date */
  modifiedDate?: string;
}

const {
  title,
  description = "Norges ledende kammermusikkfestival i Risør",
  slugNo,
  slugEn,
  frontpage = false,
  seo,
  image,
  ogType = 'website',
  publishedDate,
  modifiedDate,
} = Astro.props;

// Detect current language from URL
const currentLang: Language = detectLanguage(Astro.request);
const currentPath = new URL(Astro.request.url).pathname;

// Fetch menu items and logo from Sanity
const { query: menuQuery, params: menuParams } = QueryBuilder.siteSettingsMenu();
const menuData = await sanityClient.fetch<{ menuItems: MenuItem[]; symbolLogo?: { name: string; image: any } }>(menuQuery, menuParams);
const menuItems = menuData?.menuItems || [];
const symbolLogo = menuData?.symbolLogo;

// Fetch footer settings from Sanity
const { query: footerQuery, params: footerParams } = QueryBuilder.siteSettingsFooter();
const siteSettings = await sanityClient.fetch<SiteSettings>(footerQuery, footerParams);

// Check if Visual Editing should be enabled
const visualEditingEnabled = import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED === 'true';
const hasPreviewMode = Astro.cookies.get('sanity-preview-mode')?.value === 'true';
const enableVisualEditing = visualEditingEnabled && hasPreviewMode;
---

<!DOCTYPE html>
<html lang={currentLang} id="top">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags, Open Graph, Twitter Cards -->
    <SEO
      title={title}
      description={description}
      seo={seo}
      image={image}
      lang={currentLang}
      type={ogType}
      publishedDate={publishedDate}
      modifiedDate={modifiedDate}
    />

    <!-- Hreflang tags for multilingual SEO -->
    <HreflangTags
      currentLang={currentLang}
      currentPath={currentPath}
      slugNo={slugNo}
      slugEn={slugEn}
    />

    <!-- Optimize resource hints -->
    <link rel="dns-prefetch" href="//cdn.sanity.io" />
    <link rel="preconnect" href="//cdn.sanity.io" crossorigin />

    <!-- Preload critical fonts for optimal LCP -->
    <link
      rel="preload"
      href="/fonts/serif/DomaineText-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/sans-serif/AkkRg_Pro.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/sans-serif/AkkBd_Pro.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/serif/DomaineText-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Minimal critical styles -->
    <style>
      /* ============================================
         INTRINSIC PAGE LAYOUT
         ============================================

         Modern sticky footer pattern using CSS Grid.
         - Header: Natural height
         - Main: Fills available space
         - Footer: Natural height

         No media queries needed - fully intrinsic.
      */

      body {
        display: grid;
        grid-template-rows: auto 1fr auto;
        grid-template-columns: 100%;
        min-block-size: var(--viewport-full); /* Mobile-safe viewport height (svh with vh fallback) */
      }

      /* Main content - Flexible, fills available space */
      .main-content {
        display: flex;
        flex-direction: column;
        /* Kevin Powell pattern: Fluid on mobile, capped on desktop */
        width: min(100ch, 100% - 3rem);
        margin-inline: auto;
        /* Spacing from header and footer */
        margin-block-start: var(--page-top-spacing);
        margin-block-end: calc(var(--space-3xl) * 2);

        /* Enable container queries for child components */
        container-type: inline-size;
        container-name: content;
      }

      /* Frontpage: reduced top spacing on desktop */
      @media (min-width: 768px) {
        .main-content--frontpage {
          margin-block-start: calc(var(--page-top-spacing) * 0.75);
        }
      }

      /* ============================================
         PRINT STYLES
         ============================================

         Optimize for printed pages:
         - Remove navigation and non-essential elements
         - Adjust spacing for print media
         - Ensure content is readable
      */

      @media print {
        /* Hide non-essential elements */
        header,
        nav,
        [role="navigation"],
        .no-print {
          display: none !important;
        }

        /* Reset page structure for print */
        body {
          display: block;
          min-block-size: auto;
        }

        .main-content {
          padding: 0;
        }

        /* Ensure good contrast for printing */
        * {
          color: #000 !important;
          background: #fff !important;
        }

        /* Prevent page breaks inside important elements */
        article,
        section,
        .event-card,
        .card {
          page-break-inside: avoid;
          break-inside: avoid;
        }

        /* Add page breaks before major sections */
        h1, h2 {
          page-break-after: avoid;
          break-after: avoid;
        }

        /* Adjust typography for print */
        body {
          font-size: 12pt;
          line-height: 1.5;
        }

        /* Show link URLs in print */
        a[href]::after {
          content: " (" attr(href) ")";
          font-size: 0.8em;
        }

        /* Don't show URLs for internal links */
        a[href^="#"]::after,
        a[href^="/"]::after {
          content: "";
        }
      }

      /* ============================================
         USER PREFERENCE QUERIES
         ============================================

         Respect user accessibility preferences:
         - Reduced motion
         - High contrast
         - Dark mode (future)
      */

      /* Reduced motion - disable animations/transitions */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }

      /* High contrast mode - enhance visibility */
      @media (prefers-contrast: high) {
        body {
          font-weight: var(--font-weight-medium);
        }

        a,
        button {
          font-weight: var(--font-weight-bold);
        }

        /* Stronger borders and outlines */
        *:focus-visible {
          outline-width: 3px !important;
          outline-offset: 3px !important;
        }
      }

      /* Dark mode support (future implementation) */
      @media (prefers-color-scheme: dark) {
        /* Dark mode tokens would go here */
        /* Currently not implemented to keep it simple */
      }

      /* ============================================
         SKIP NAVIGATION LINK
         ============================================

         Accessibility feature for keyboard/screen reader users
         to bypass navigation and jump directly to main content.

         Hidden by default, visible only when focused.
      */
      .skip-link {
        position: absolute;
        top: -100%;
        left: 0;
        background: var(--color-blue);
        color: white;
        padding: var(--space-2) var(--space-4);
        text-decoration: none;
        font-weight: var(--font-weight-bold);
        z-index: 9999;
        border-radius: 0 0 var(--radius-sm) 0;
        opacity: 0;
        transition: top 0.2s ease, opacity 0.2s ease;
      }

      .skip-link:focus {
        top: 0;
        opacity: 1;
      }
    </style>

  </head>
  <body data-last-update={new Date().toISOString()}>
    <!-- Skip navigation link for keyboard accessibility -->
    <a href="#main-content" class="skip-link">
      {currentLang === 'no' ? 'Hopp til hovedinnhold' : 'Skip to main content'}
    </a>

    <!-- Menu with navigation and language switcher -->
    <Menu
      currentLang={currentLang}
      currentPath={currentPath}
      slugNo={slugNo}
      slugEn={slugEn}
      menuItems={menuItems}
      symbolLogo={symbolLogo}
    />

    <main id="main-content" class:list={['main-content', { 'main-content--frontpage': frontpage }]} tabindex="-1">
      <slot />
    </main>

    <!-- Back to top link -->
    <div class="back-to-top-container">
      <a href="#top" class="back-to-top-link">
        <span class="back-to-top-text">{currentLang === 'no' ? 'Tilbake til toppen' : 'Back to the top'} ↑</span>
      </a>
    </div>

    <!-- Footer -->
    <Footer currentLang={currentLang} siteSettings={siteSettings} />

    <!-- Structured Data: Organization Schema (site-wide) -->
    <OrganizationSchema />

    <!-- Visual Editing Component -->
    {enableVisualEditing && <VisualEditing enabled={true} zIndex={1000} />}

    <!-- HTMX - Load from npm package and make globally available -->
    <script>
      import * as htmx from 'htmx.org';
      // Make htmx available globally for all pages
      window.htmx = htmx;
    </script>

    <!-- bfcache handler - refresh stale data on back/forward navigation -->
    <script src="../scripts/bfcacheHandler.js"></script>
  </body>
</html>

<style>
  /* ============================================
     BACK TO TOP LINK
     ============================================

     Global navigation element for returning to page top.
     Appears before footer on all pages.
  */

  .back-to-top-container {
    /* Spacing above and large spacing below */
    margin-block-start: var(--space-l);
    margin-block-end: calc(var(--space-3xl) * 2);

    /* Center the link */
    text-align: center;
  }

  .back-to-top-link {
    display: inline-block;
    text-decoration: none;
    background-image: none; /* Override base.css */
    font-size: var(--step-1);
    font-weight: var(--font-weight-medium);
  }

  .back-to-top-text {
    position: relative;
  }

  .back-to-top-text::after {
    content: '';
    position: absolute;
    inset-inline-start: 0;
    inset-block-end: 0;
    inline-size: 100%;
    block-size: 0.08em;
    background-color: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform var(--transition-fast);
  }

  @media (hover: hover) {
    .back-to-top-link:hover .back-to-top-text::after {
      transform: scaleX(1);
      transform-origin: left;
    }
  }

  .back-to-top-link:focus-visible .back-to-top-text::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Accessibility: Disable smooth scroll for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .back-to-top-link {
      scroll-behavior: auto;
    }
  }

  /* Print styles - hide back to top link */
  @media print {
    .back-to-top-container {
      display: none !important;
    }
  }
</style>

