---
import Layout from '../layouts/Layout.astro';
import DynamicComponent from '../components/DynamicComponent.astro';
import HeaderImage from '../components/HeaderImage.astro';
import ArticleSchema from '../components/structured-data/ArticleSchema.astro';
import { getMultilingualContent } from '../lib/utils/language.js';
import { IMAGE_QUALITY } from '../lib/sanityImage';
import { stegaClean } from '@sanity/client/stega';

interface Props {
  article: any;
  language: 'no' | 'en';
}

const { article, language } = Astro.props;

// Language-specific configuration
const config = {
  no: {
    screenReaderText: 'Artikkelinnhold',
    contentField: 'content_no'
  },
  en: {
    screenReaderText: 'Article Content',
    contentField: 'content_en'
  }
}[language];

// Get appropriate content array
const content = getMultilingualContent(article, language) || article[config.contentField];
---

<Layout
  title={stegaClean(article.title || '')}
  description={stegaClean(article.excerpt || '')}
  slugNo={article.slug_no?.current}
  slugEn={article.slug_en?.current}
  seo={article.seo}
  image={article.image?.image}
  ogType="article"
  publishedDate={article._createdAt}
  modifiedDate={article._updatedAt}
>
  <!-- Structured Data: Article Schema -->
  <ArticleSchema article={article} lang={language} />

  <article class="article-page">
    <header class="article-header">
      <hgroup>
        <h1>{stegaClean(article.title || '')}</h1>
        {article.excerpt && <p class="excerpt">{stegaClean(article.excerpt)}</p>}
      </hgroup>
    </header>

    {article.image?.image && (
      <section class="article-image">
        <HeaderImage
          image={article.image.image}
          alt={stegaClean(article.image.alt || article.title || '')}
          credit={article.image.credit ? stegaClean(article.image.credit) : undefined}
          aspectRatio="4:3"
          loading="eager"
          quality={IMAGE_QUALITY.CARD}
          width="100%"
        />
      </section>
    )}

    {content && Array.isArray(content) && (
      <section class="pagebuilder-content">
        <h2 class="sr-only">{config.screenReaderText}</h2>
        {content.map((block) => (
          <DynamicComponent key={block._key || block._id} block={block} />
        ))}
      </section>
    )}
  </article>
</Layout>

<style>
  .article-header {
    margin-bottom: var(--space-2xl); /* 48-60px - matches event page */
    container-type: inline-size; /* Enable container queries for h1 sizing */
  }

  h1 {
    font-size: var(--heading-h1); /* Fluid 37-69px with cqi sizing */
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: var(--space-6); /* 24-30px - matches event page h1 spacing */
  }

  /* Excerpt styling handled by global .excerpt class in base.css */

  /* Article image - constrained and centered */
  .article-image {
    max-width: min(100%, 60ch);
    margin-inline: auto; /* Center horizontally */
    margin-block-end: var(--space-3xl);
  }

  .article-image :global(.header-image) {
    width: 100%;
    margin: 0;
  }

  /* Pagebuilder content spacing - generous space between components */
  .pagebuilder-content {
    line-height: 1.6;
    margin-block-end: var(--space-3xl);
  }

  .pagebuilder-content > :global(*) {
    margin-block-end: var(--space-3xl);
  }

  .pagebuilder-content > :global(*:last-child) {
    margin-block-end: 0;
  }

</style>
