---
/**
 * Footer - Site-wide footer with contact, social, and branding
 *
 * Renders footer content from Sanity siteSettings singleton. Fully bilingual
 * with language-aware field selection for organization name, newsletter, etc.
 *
 * Sections:
 * - Branding: Festival logo + newsletter signup link
 * - Contact: Email, phone (formatted), address (optionally linked)
 * - Social: Icon links to Facebook, Instagram, YouTube, Spotify
 * - Meta: Copyright notice + developer credit
 *
 * @see src/lib/sanity/queryBuilder.ts - siteSettingsFooter() query
 */

import type { Language } from '../lib/utils/language.js';

/** Footer content structure from Sanity siteSettings */
export interface SiteSettings {
  email?: string;
  phone?: string;
  address?: string;
  linkUrl?: string;
  openInNewTab?: boolean;
  organizationName_no?: string;
  organizationName_en?: string;
  newsletterUrl?: string;
  newsletterTitle_no?: string;
  newsletterTitle_en?: string;
  socialMedia?: Array<{
    name: string;
    url: string;
  }>;
  symbolLogo?: {
    name: string;
    image: {
      asset: {
        _id: string;
        url: string;
        mimeType: string;
      };
      hotspot?: any;
      crop?: any;
    };
  };
}

interface Props {
  currentLang: Language;
  siteSettings?: SiteSettings;
}

const { currentLang, siteSettings } = Astro.props;

// Language-aware field access
const organizationName = currentLang === 'no'
  ? siteSettings?.organizationName_no
  : siteSettings?.organizationName_en;

const newsletterTitle = currentLang === 'no'
  ? siteSettings?.newsletterTitle_no
  : siteSettings?.newsletterTitle_en;

// Get current year for copyright
const currentYear = new Date().getFullYear();

// Developer credit text based on language
const developerCreditText = currentLang === 'no'
  ? 'Nettsider fra Magefølelsen'
  : 'Website by Magefølelsen';

const newTabText = currentLang === 'no'
  ? '(åpnes i ny fane)'
  : '(opens in new tab)';
const socialAriaLabel = currentLang === 'no' ? 'Sosiale medier' : 'Social media';

// Format phone number for display (e.g., "+47 37 15 15 00")
function formatPhoneNumber(phone: string): string {
  // Remove all non-digit characters except +
  const cleaned = phone.replace(/[^\d+]/g, '');

  // Format as: +47 37 15 15 00
  if (cleaned.startsWith('+47') && cleaned.length === 11) {
    return `+47 ${cleaned.slice(3, 5)} ${cleaned.slice(5, 7)} ${cleaned.slice(7, 9)} ${cleaned.slice(9, 11)}`;
  }

  // Return original if format doesn't match
  return phone;
}

const formattedPhone = siteSettings?.phone ? formatPhoneNumber(siteSettings.phone) : undefined;

// Social media icon mapping
