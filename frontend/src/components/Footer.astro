  YouTube: '<svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>YouTube</title><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>',
  Spotify: '<svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><title>Spotify</title><path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/></svg>',
};

function getSocialIcon(name: string): string | undefined {
  return socialIcons[name];
}
---

<footer class="footer" role="contentinfo">

  <!-- Branding Section -->
  <div class="footer-branding">
    <!-- Festival Logo -->
    <svg
      viewBox="0 0 850.39 850.39"
      width="70"
      height="70"
      class="footer-logo"
      aria-label="Risør Kammermusikkfest"
    >
      <polygon fill="#1B198F" points="738.52 358.88 635.73 256.09 530.46 361.36 425.2 256.09 319.93 361.36 214.66 256.09 111.87 358.89 111.87 419.14 214.66 316.35 319.93 421.62 425.2 316.35 530.46 421.62 635.73 316.35 738.52 419.14 738.52 358.88"/>
      <rect fill="#1B198F" x="111.87" y="498.81" width="626.65" height="41.61"/>
      <path fill="#1B198F" d="M425.2,704.18c28.67,0,41.16-13.69,63.86-36.41,21.3-21.32,45.85-43.82,92.8-43.82s71.5,22.5,92.8,43.82c22.7,22.72,35.19,36.41,63.86,36.41v42.18c-47.09,0-69.74-24.29-89.61-43.89-22.84-22.51-35.01-36.34-67.05-36.34s-44.2,13.83-67.05,36.34c-19.88,19.59-42.53,43.89-89.61,43.89s-69.74-24.29-89.61-43.89c-22.84-22.51-35.01-36.34-67.05-36.34s-44.2,13.83-67.05,36.34c-19.88,19.59-42.53,43.89-89.61,43.89v-42.18c28.67,0,41.16-13.69,63.86-36.41,21.3-21.32,45.85-43.82,92.8-43.82s71.5,22.5,92.8,43.82c22.7,22.72,35.19,36.41,63.86,36.41Z"/>
      <path fill="#1B198F" d="M738.52,117.1c-21.88-7.53-48.47-13.07-85.36-13.07-61.15,0-94.08,15.17-123.95,29.5-27.38,13.14-51.19,24.71-104.02,24.71s-76.64-11.57-104.02-24.71c-29.86-14.33-62.8-29.5-123.95-29.5-36.9,0-63.49,5.54-85.36,13.07v45.14c21.15-9.19,44.42-16.03,85.36-16.03,52.83,0,76.25,11.37,103.63,24.51,29.86,14.33,63.18,29.7,124.33,29.7s94.47-15.37,124.33-29.7c27.38-13.14,50.8-24.51,103.63-24.51,40.94,0,64.22,6.84,85.36,16.03v-45.14h.02Z"/>
    </svg>

    <!-- Newsletter Link -->
    {siteSettings?.newsletterUrl && newsletterTitle && (
      <a
        href={siteSettings.newsletterUrl}
        class="footer-newsletter-link hover-underline"
        target="_blank"
        rel="noopener noreferrer"
      >
        <span class="footer-link-text">{newsletterTitle}</span>
        <span class="visually-hidden"> {newTabText}</span>
      </a>
    )}
  </div>

  <!-- Contact Section -->
  {(siteSettings?.email || siteSettings?.phone || siteSettings?.address) && (
    <section class="footer-contact" aria-labelledby="contact-heading">
      <h2 id="contact-heading" class="visually-hidden">
        {currentLang === 'no' ? 'Kontaktinformasjon' : 'Contact Information'}
      </h2>
      <address class="footer-address">
        {siteSettings.email && (
          <a href={`mailto:${siteSettings.email}`} class="hover-underline">
            <span class="footer-link-text">{siteSettings.email}</span>
          </a>
        )}

        {siteSettings.phone && (
          <a href={`tel:${siteSettings.phone}`} class="hover-underline">
            <span class="footer-link-text">{formattedPhone}</span>
          </a>
        )}

        {siteSettings.address && (
          <>
            {siteSettings.linkUrl ? (
              <a
                href={siteSettings.linkUrl}
                class="hover-underline"
                target={siteSettings.openInNewTab ? '_blank' : undefined}
                rel={siteSettings.openInNewTab ? 'noopener noreferrer' : undefined}
              >
                <span class="footer-link-text">{siteSettings.address}</span>
                {siteSettings.openInNewTab && (
                  <span class="visually-hidden"> {newTabText}</span>
                )}
              </a>
            ) : (
              <span>{siteSettings.address}</span>
            )}
          </>
        )}
      </address>
    </section>
  )}

  <!-- Social Media Links -->
  {siteSettings?.socialMedia && siteSettings.socialMedia.length > 0 && (
    <div class="footer-social" role="group" aria-label={socialAriaLabel}>
      <ul class="footer-social-list">
        {siteSettings.socialMedia.map((social) => {
          const icon = getSocialIcon(social.name);
          return (
            <li>
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="footer-social-link hover-underline"
              >
                <span class="footer-link-text">{social.name}</span>
                {icon && (
                  <span class="footer-social-icon" set:html={icon} />
                )}
                <span class="visually-hidden"> {newTabText}</span>
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  )}


  <!-- Meta Information -->
  <div class="footer-meta">
    <!-- Copyright Notice -->
    <p class="footer-copyright">
      © {currentYear} {organizationName || 'Risør kammermusikkfest'}
    </p>

    <!-- Developer Credit -->
    <p class="footer-developer-credit">
      {developerCreditText}
    </p>
  </div>

</footer>

<style>
  /* ============================================
     FOOTER - INTRINSIC LAYOUT
     ============================================ */

  .footer {
    /* Container sizing */
    margin-inline: auto;
    width: min(80ch, 100% - 5rem);
    margin-block-end: calc(var(--space-3xl) * 3);

    /* Visual styling */
    background-color: var(--color-green-100);

    /* Layout - Flexbox with gap for spacing */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-l);
    text-align: center;

    /* Padding */
    padding-block-start: var(--space-2xl);
    padding-block-end: var(--space-3xl);
    padding-inline: var(--space-xl);
  }

  /* Reset margins on direct children - gap handles spacing */
  .footer > * {
    margin: 0;
  }

  /* ============================================
     SPACING OVERRIDES

     Add extra spacing where needed beyond the default gap
     ============================================ */

  /* Extra space above meta section */
  .footer-meta {
    margin-block-start: var(--space-xl);
  }

  /* ============================================
     SHARED LINK ANIMATION
     ============================================ */


  /* ============================================
     BRANDING SECTION
     ============================================ */

  .footer-branding {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-l);
    padding-block-end: var(--space-xl);
  }

  /* Festival logo styling */
  .footer-logo {
    display: block;
    width: 70px;
    height: 70px;
  }

  /* Newsletter link */
  .footer-newsletter-link {
    font-size: var(--step-2);
    font-weight: var(--font-weight-normal);
    display: inline-block;
    background-image: none;
  }

  .footer-newsletter-link::after {
    content: ' →';
  }

  /* ============================================
     CONTACT SECTION
     ============================================ */

  .footer-contact {
    /* Inherits spacing from stack pattern */
  }

  .footer-address {
    font-style: normal;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    font-size: var(--step-0);
    line-height: 1.5;
  }


  /* ============================================
     SOCIAL MEDIA SECTION
     ============================================ */

  .footer-social {
    padding-block-end: var(--space-xl);
  }

  .footer-social-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-s);
  }

  .footer-social-list li {
    margin: 0;
  }

  .footer-social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .footer-social-icon {
    display: block;
    width: 24px;
    height: 24px;
  }

  .footer-social-icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }


  /* ============================================
     META SECTION (Copyright & Developer Credit)
     ============================================ */

  .footer-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-l);
  }

  .footer-copyright {
    font-size: var(--step-0);
  }

  .footer-developer-credit {
    font-size: var(--step-0);
    display: inline-block;
  }


  /* ============================================
     ACCESSIBILITY UTILITIES
     ============================================ */

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* ============================================
     PRINT STYLES
     ============================================ */

  @media print {
    .footer {
      display: none !important;
    }
  }
</style>
