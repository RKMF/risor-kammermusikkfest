function getSocialIcon(name: string): string | undefined {
  return socialIcons[name];
}
---

<footer class="page-footer">

  <!-- Newsletter Link -->
  {siteSettings?.newsletterUrl && newsletterTitle && (
    <a
      href={siteSettings.newsletterUrl}
      class="newsletter-link"
      target="_blank"
      rel="noopener noreferrer"
    >
      {newsletterTitle}
      <span class="visually-hidden"> {newTabText}</span>
    </a>
  )}

  <!-- Contact Information -->
  {(siteSettings?.email || siteSettings?.phone || siteSettings?.address) && (
    <address>
      {siteSettings.email && (
        <a href={`mailto:${siteSettings.email}`}>
          {siteSettings.email}
        </a>
      )}

      {siteSettings.phone && (
        <a href={`tel:${siteSettings.phone}`}>
          {formattedPhone}
        </a>
      )}

      {siteSettings.address && (
        <>
          {siteSettings.linkUrl ? (
            <a
              href={siteSettings.linkUrl}
              target={siteSettings.openInNewTab ? '_blank' : undefined}
              rel={siteSettings.openInNewTab ? 'noopener noreferrer' : undefined}
            >
              {siteSettings.address}
              {siteSettings.openInNewTab && (
                <span class="visually-hidden"> {newTabText}</span>
              )}
            </a>
          ) : (
            <span>{siteSettings.address}</span>
          )}
        </>
      )}
    </address>
  )}

  <!-- Social Media Links -->
  {siteSettings?.socialMedia && siteSettings.socialMedia.length > 0 && (
    <nav aria-label={socialAriaLabel}>
      <ul>
        {siteSettings.socialMedia.map((social) => {
          const icon = getSocialIcon(social.name);
          return (
            <li>
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
              >
                <span class="social-name">{social.name}</span>
                {icon && (
                  <span class="social-icon" set:html={icon} />
                )}
                <span class="visually-hidden"> {newTabText}</span>
              </a>
            </li>
          );
        })}
      </ul>
    </nav>
  )}

  <!-- Copyright Notice -->
  <p class="copyright">
    © {currentYear} {organizationName || 'Risør kammermusikkfest'}
  </p>

  <!-- Developer Credit -->
  <a
    href="https://www.magefolelsen.no"
    class="developer-credit"
    target="_blank"
    rel="noopener noreferrer"
  >
    {developerCreditText}
    <span class="visually-hidden"> {newTabText}</span>
  </a>

</footer>

<style>
  /* Footer - Intrinsic size with centered content */
  .page-footer {
    margin-inline: auto;
    width: min(80ch, 100% - 5rem);
    background-color: var(--color-green-100);
    margin-block-end: calc(var(--space-3xl) * 3);

    /* Flexbox layout for children */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-l);

    /* Centering and padding */
    text-align: center;
    padding-block-start: var(--space-2xl);
    padding-block-end: var(--space-3xl);
    padding-inline: var(--space-xl);
  }

  /* Reset margins on direct children */
  .page-footer > * {
    margin: 0;
  }

  /* Contact section - semantic address element */
  .page-footer address {
    font-style: normal;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    font-size: var(--step-0);
    line-height: 1.5;
    margin-block-end: var(--space-m);
  }

  /* Social navigation */
  .page-footer nav {
    margin-block-start: calc(var(--space-l) * -0.5);
    margin-block-end: var(--space-m);
  }

  .page-footer nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-s);
  }

  .page-footer nav li {
    margin: 0;
  }

  /* Social media link layout */
  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  /* Social media icon styling */
  .social-icon {
    display: block;
    width: 24px;
    height: 24px;
  }

  .social-icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  /* Contact & social links - simple underline on hover only */
  .page-footer address a,
  .social-link {
    text-decoration: none;
  }

  @media (hover: hover) {
    .page-footer address a:hover,
    .social-link:hover {
      text-decoration: underline;
      text-decoration-thickness: 0.08em; /* Subtle increase - scales with text */
      background-color: transparent; /* Override global green tint */
      transform: none; /* Override global lift */
      box-shadow: none; /* Override global shadow */
    }
  }

  /* Remove arrows from contact/social links */
  .page-footer address a::after,
  .social-link::after {
    content: none;
  }

  /* Specific elements - set first for proper cascade */
  .copyright,
  .developer-credit {
    font-size: var(--step-0);
  }

  .newsletter-link {
    font-size: var(--step-2);
    font-weight: var(--font-weight-normal);
    padding-block: var(--space-m);
  }

  /* Newsletter & developer credit - lift only (no green tint, no shadow) */
  .page-footer a.newsletter-link,
  .page-footer a.developer-credit {
    display: inline-block;
    text-decoration: underline;
    text-decoration-thickness: 0.0625em; /* Default - scales with text */
    transition: transform var(--transition-fast); /* Only transition lift - instant thickness change */
  }

  @media (hover: hover) {
    .page-footer a.newsletter-link:hover,
    .page-footer a.developer-credit:hover {
      text-decoration: underline;
      text-decoration-thickness: 0.08em; /* Subtle increase - scales with text */
      transform: translateY(-2px); /* Only lift */
      background-color: transparent; /* No green tint */
      box-shadow: none; /* No shadow */
    }
  }

  .page-footer .copyright {
    margin-block-end: var(--space-m);
  }

  /* Arrows for external CTAs */
  .page-footer .newsletter-link::after,
  .page-footer .developer-credit::after {
    content: ' →';
  }

  /* Accessibility: Visually hidden but available to screen readers */
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* Print styles */
  @media print {
    .page-footer {
      display: none !important;
    }
  }
</style>
