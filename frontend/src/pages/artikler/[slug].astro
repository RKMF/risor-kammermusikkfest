---
import Layout from "../../layouts/Layout.astro";
import DynamicComponent from "../../components/DynamicComponent.astro";
import Image from "../../components/Image.astro";
import { loadQuery } from "../../lib/sanity/loadQuery.js";
import { getMultilingualContent } from "../../lib/utils/language.js";
import { IMAGE_QUALITY } from '../../lib/sanityImage';
import { stegaClean } from '@sanity/client/stega';
import type { SanityDocument } from '@sanity/client';

// Generate static paths for all articles
export async function getStaticPaths() {
  const { data: articles } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "article" && (defined(slug_no.current) || defined(slug_en.current))]`,
  });

  return articles.map((article) => {
    // Use Norwegian slug, fallback to English slug
    const slug = article.slug_no?.current || article.slug_en?.current;
    return {
      params: { slug },
    };
  });
}

const { params } = Astro;

// Fetch the specific article based on the slug parameter (Norwegian priority)
const { data: article } = await loadQuery({
  query: `*[_type == "article" && $slug in [slug_no.current, slug_en.current, slug.current]][0]{
    _id,
    _type,
    title_no,
    "title": title_no,
    slug_no,
    excerpt_no,
    "excerpt": excerpt_no,
    "image": {
      "image": image{
        asset->{
          _id,
          url,
          metadata {
            dimensions {
              width,
              height,
              aspectRatio
            },
            lqip
          }
        },
        hotspot,
        crop
      },
      "alt": coalesce(imageAlt_no, imageAlt_en, image.alt),
      "credit": coalesce(imageCredit_no, imageCredit_en)
    },
    content_no,
    content_en,
    publishedAt,
    author->{
      _id,
      name,
      "slug": slug.current
    }
  }`,
  params,
});

if (!article) {
  return Astro.redirect('/404');
}

// Get appropriate content array
const content = getMultilingualContent(article, 'no') || article.content_no;
---

<Layout title={stegaClean(article.title || '')}>
  <main>
    <article>
      <header>
        <h1>{stegaClean(article.title || '')}</h1>
        {article.excerpt && <p class="excerpt">{stegaClean(article.excerpt)}</p>}
        {article.publishedAt && (
          <time datetime={new Date(article.publishedAt).toISOString()}>
            {new Intl.DateTimeFormat('no-NO', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            }).format(new Date(article.publishedAt))}
          </time>
        )}
        {article.author && (
          <p class="author">Av {stegaClean(article.author.name)}</p>
        )}
      </header>

      {article.image?.image && (
        <Image
          image={article.image.image}
          alt={stegaClean(article.image.alt || article.title || '')}
          credit={article.image.credit ? stegaClean(article.image.credit) : undefined}
          size="large"
          aspectRatio="16:9"
          loading="eager"
          priority={true}
          quality={IMAGE_QUALITY.HERO}
          className="article-image"
        />
      )}

      {content && Array.isArray(content) && (
        <div class="article-content">
          {content.map((block) => (
            <DynamicComponent key={block._key || block._id} block={block} />
          ))}
        </div>
      )}
    </article>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  article header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .excerpt {
    font-size: 1.25rem;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  time {
    font-size: 0.9rem;
  }

  .author {
    font-style: italic;
    margin-top: 0.5rem;
  }

  /* Image component with className */
  :global(figure.article-image) {
    width: 100%;
    margin: 0 0 2rem 0;
  }

  :global(.article-image .image) {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .article-content {
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .excerpt {
      font-size: 1.1rem;
    }
  }
</style>
